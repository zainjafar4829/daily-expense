<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>
<h1> Total out standing Amount is: <b> <%= Expense.pluck(:amount).sum %></b></h1>
<table class="table table-bordered">
  <thead>
    <th scope="col">#</th>
    <th> Title</th>
    <th> Description</th>
    <th> Amount</th>
    <th>Actions</th>
  </thead>
  <tbody>
  <% @expenses.each_with_index do |expense, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= expense.title %></td>
      <td> <%= expense.description %></td>
      <td> <%= expense.amount %></td>
      <td>
        <%= link_to 'Show', expense, class: "btn btn-primary btn-sm mt-1" %>
        <%= link_to 'Edit', edit_expense_path(expense), class: "btn btn-primary btn-sm mt-1" %>
        <%= link_to 'Delete', expense, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<style>
    .table-bordered {
        border: 1px solid #dee2e6;
    }
</style>


